{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <ul>
            <li>
                <a href="{{ path('orden_index') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Retourner
                </a>
            </li>
        </ul>
        <h1>Liste de Commandes</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date de commande</th>
                    <th>Client</th>
                    <th>Statut</th>
                    <th>Téléphone</th>
                    <th>Info/Changer Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for orden in ordens %}
                    <tr>
                        <td><a href="{{ path('orden_show', { 'id': orden.id }) }}">{{ orden.id }}</a></td>
                        <td>{% if orden.dateOrder %}{{ orden.dateOrder|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ orden.firstUser.name }}</td>
                        <td>{{ orden.status }}</td>
                        <td>{{ orden.tel }}</td>
                        <td>
                            <ul style="padding-left: 0">
                                <li style="display: inline-block;">
                                    <a href="{{ path('orden_show', { 'id': orden.id }) }}">
                                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li style="display: inline-block;">
                                    <a href="{{ path('orden_edit', { 'id': orden.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}