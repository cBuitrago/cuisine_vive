{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">

        <ul>
            <li>
                <a href="{{ path('administracion_dish_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Créér une assiette
                </a>
            </li>
        </ul>
        <h1>Liste des assiettes</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Assiette</th>
                    <th>Catégorie</th>
                    <th>Info/Modifier/Icônes</th>
                </tr>
            </thead>
            <tbody>
                {% for dish in dishes %}
                    <tr>
                        <td><img style="width: 40px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ dish.photo ) }}" alt="{{ dish.name }}" /></td>
                        <td style="width: 300px;">{{ dish.name }}</td>
                        <td>{{ dish.category.name }}</td>
                        <td>
                            <ul style="padding-left: 0">
                                <li style="display: inline-block;">
                                    <a href="{{ path('administracion_dish_show', { 'id': dish.id }) }}">
                                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li style="display: inline-block;">
                                    <a href="{{ path('administracion_dish_edit', { 'id': dish.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li style="display: inline-block;">
                                    <a href="{{ path('dishicon_new', { 'id': dish.id }) }}">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
