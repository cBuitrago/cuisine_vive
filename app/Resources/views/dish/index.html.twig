{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Dishes list</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Isactive</th>
                    <th>Priority</th>
                    <th>Isdishweek</th>
                    <th>Photo</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for dish in dishes %}
                    <tr>
                        <td><a href="{{ path('administracion_dish_show', { 'id': dish.id }) }}">{{ dish.id }}</a></td>
                        <td>{{ dish.name }}</td>
                        <td>{% if dish.isActive %}Yes{% else %}No{% endif %}</td>
                        <td>{{ dish.priority }}</td>
                        <td>{% if dish.isDishWeek %}Yes{% else %}No{% endif %}</td>
                        <td>{{ dish.photo }}</td>
                        <td>{{ dish.category.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('administracion_dish_show', { 'id': dish.id }) }}">
                                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('administracion_dish_edit', { 'id': dish.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('dishicon_new', { 'id': dish.id }) }}">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('administracion_dish_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Create a new dish
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
