{% extends 'base.html.twig' %}

{% block body %}
    {{ dump(form) }}
    <h1>Dish creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        {% for language in form.languages %}
            <li>{{ form_row(language) }}</li>
        {% endfor %}
        {% for portion in form.portions %}
            <li>{{ form_row(portion) }}</li>
        {% endfor %}
      
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('administracion_dish_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
