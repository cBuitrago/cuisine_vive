{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dish</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dish.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dish.name }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if dish.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ dish.priority }}</td>
            </tr>
            <tr>
                <th>Isdishweek</th>
                <td>{% if dish.isDishWeek %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ dish.photo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('administracion_dish_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('administracion_dish_edit', { 'id': dish.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
