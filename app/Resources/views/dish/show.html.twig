{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Dish</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ dish.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ dish.name }}</td>
                </tr>
                <tr>
                    <th>Isactive</th>
                    <td>{% if dish.isActive %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Priority</th>
                    <td>{{ dish.priority }}</td>
                </tr>
                <tr>
                    <th>Isdishweek</th>
                    <td>{% if dish.isDishWeek %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ dish.photo }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ dish.category.name }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('administracion_dish_index') }}">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Back to the list
                </a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('administracion_dish_edit', { 'id': dish.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit
                </a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-default" />
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
