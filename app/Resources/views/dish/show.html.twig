{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Assiette - {{ dish.name }}</h1>
        {% set anglais = dish.getLanguageOfDishAll('en') %}
        {% set francais = dish.getLanguageOfDishAll('fr') %}
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Nom de l'assiette</th>
                    <td>{{ dish.name }}</td>
                </tr>
                <tr>
                    <th>Actif?</th>
                    <td>{% if dish.isActive %}Oui{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Priorité</th>
                    <td>{{ dish.priority }}</td>
                </tr>
                <tr>
                    <th>Nom (français)</th>
                    <td>{{ francais.name }}</td>
                </tr>
                <tr>
                    <th>Description (français)</th>
                    <td>{{ francais.description }}</td>
                </tr>
                <tr>
                    <th>Ingredients (français)</th>
                    <td>{{ francais.ingredients }}</td>
                </tr>
                <tr>
                    <th>Nom (anglais)</th>
                    <td>{{ anglais.name }}</td>
                </tr>
                <tr>
                    <th>Description (anglais)</th>
                    <td>{{ anglais.description }}</td>
                </tr>
                <tr>
                    <th>Ingredients (anglais)</th>
                    <td>{{ anglais.ingredients }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ dish.category.name }}</td>
                </tr>
                {% for portion in dish.portions %}
                    <tr>
                        <th>Portion {{ portion.portion.name }}</th>
                        <td>$ {{ portion.price }}</td>
                    </tr>
                {% endfor %} 
                <tr>
                    <th>Photo</th>
                    <td><img style="width: 100px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ dish.photo ) }}" alt="{{ dish.name }}" /></td>
                </tr>
                <tr>
                    <th>Nom photo</th>
                    <td>{{ dish.photo }}</td>
                </tr>
                <tr>
                    <th>Icônes</th>
                    <td>
                        <ul>
                            {% for icon in dish.icons %}
                                <li style="display: inline-block;"><img style="width: 30px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ icon.icon.image ) }}" alt="{{ icon.icon.name }}" /></li>
                                {% endfor %} 
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('administracion_dish_index') }}">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Retourner à la liste
                </a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('administracion_dish_edit', { 'id': dish.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modifier
                </a>
            </li>
            {#<li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Effacer" class="btn btn-default" />
                {{ form_end(delete_form) }}
            </li>#}
        </ul>
    </div>
{% endblock %}
