{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Icône - {{ icon.name }}</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Nom Icône</th>
                    <td>{{ icon.name }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <img style="width: 50px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ icon.image ) }}" alt="{{ icon.name }}" /></li>
                    </td>
                </tr>
                <tr>
                    <th>Nom image</th>
                    <td>{{ icon.image }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('icon_index') }}">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Retourner à la liste
                </a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('icon_edit', { 'id': icon.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modifier
                </a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Effacer" class="btn btn-default" />
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
