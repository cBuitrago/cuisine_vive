{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <ul>
            <li>
                <a href="{{ path('icon_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Créér un Icône
                </a>
            </li>
        </ul>
        <h1>Liste des Icônes</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom de l'icôn</th>
                    <th>Image</th>
                    <th>Info/Modifier</th>
                </tr>
            </thead>
            <tbody>
                {% for icon in icons %}
                    <tr>
                        <td>{{ icon.name }}</td>
                        <td><img style="width: 40px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ icon.image ) }}" alt="{{ icon.name }}" /></td>
                        <td>
                            <ul style="padding-left: 0">
                                <li style="display: inline-block;">
                                    <a href="{{ path('icon_show', { 'id': icon.id }) }}">
                                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li style="display: inline-block;">
                                    <a href="{{ path('icon_edit', { 'id': icon.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
