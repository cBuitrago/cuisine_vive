{% extends 'base.html.twig' %}

{% block title %}Menu - Cuisine Vive{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <header>
        <div id="home" class="barTop">  
            <div class="content">
                <div class="promotion">
                    <p class="promotion-text">{{ lang.homepage.sectionPromo.content.text }} {{ liv|date("d/m/Y") }} - {{ liv|date_modify('+1 day')|date(" d/m/Y") }}</p>
                </div>
                <div class="links">        
                    <a href="{{ path('menuId', { 'id' : dish.linkTranslate }) }}">
                        <p class="">{{ lang.homepage.sectionTop.link2.title}}</p>
                    </a>
                    <div class="social-networks">
                        <ul>
                            <li class=""><a href="{{ lang.homepage.sectionTop.socialIcons.link1.path}}" target="_blank">
                                    <span class="icon icon-facebook-with-circle"/></a></li>
                            <li class=""> <a href="{{ lang.homepage.sectionTop.socialIcons.link3.path}}" target="_blank">
                                    <span class="icon icon-instagram-with-circle"/></a></li>
                            <li class=""><a href="{{ lang.homepage.sectionTop.socialIcons.link6.path}}" target="_blank">
                                    <span class="icon icon-pinterest-with-circle"/></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar content" id="nav" role="navigation">
            <div class="container-fluid content">
                <div class="navbar-header">
                    <h1>
                        <a href="/">
                            {% image 'Resources/public/images/logo.png' %}
                            <img src="{{ asset_url }}" alt="Cuisine Vive" />
                            {% endimage %}
                        </a>    
                    </h1>
                    <div class='cart-collapsed'>
                        <a  href="" data-toggle="modal" data-target="#myModal"> 
                            <span class="icon-shopping-cart"></span>
                        </a>
                    </div>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only"> </span>
                        <span class="icon-bar bg-primary"></span>
                        <span class="icon-bar bg-primary"></span>
                        <span class="icon-bar bg-primary"></span>
                    </button>
                </div>
            </div>

            <div class="collapse navbar-collapse content" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('homepage') }}"> <span class="icon-home"></span></a></li>
                    <li class="button">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="icon icon-circle-with-cross"/></button>
                    </li>
                    <li><a href="{{ path('homepage') }}#{{ lang.homepage.sectionTop.menu3.path}}">{{ lang.homepage.sectionTop.menu3.title}}</a></li>
                    <li><a href="{{ path('homepage') }}#{{ lang.homepage.sectionTop.menu4.path}}">{{ lang.homepage.sectionTop.menu4.title}}</a></li>
                    <li><a href="{{ path('homepage') }}#{{ lang.homepage.sectionTop.menu2.path}}">{{ lang.homepage.sectionTop.menu2.title}}</a></li>
                    <li><a href="{{ path('homepage') }}#{{ lang.homepage.sectionTop.menu5.path}}">{{ lang.homepage.sectionTop.menu5.title}}</a></li>
                    <li><a  href="" data-toggle="modal" data-target="#myModal"> <span class="icon-shopping-cart"></span></a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="menuIdCategory" id="menuIdCategory">
        <div class="content">
            <div class="left">
                <img class="menuId-photo" src="{{ asset('Resources/public/images/' ~ dish.photo ) }}" alt="{{ dish.name }}" />
                <div class="likes">
                    <div class="fb-like" data-href="https://www.facebook.com/cuisineVive/" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
                    <div class="pin-it">
                        <a href="//pinterest.com/pin/create/button/" data-pin-do="buttonBookmark">
                            <img src="//assets.pinterest.com/images/pidgets/pin_it_button.png">
                        </a>
                    </div>
                </div>
            </div>
            <div class="right">
                <h1 class="title">{{ dish.name }}</h1>
                <h2 class="subtitle">{{ dish.description }}</h2>
                <div class="icons">
                    {% for icon in dish.icons %}
                        <img class="" src="{{ asset('Resources/public/images/' ~ icon ) }}" alt="{{ dish.name }}" />
                    {% endfor %}
                </div>
                <p class="text">{{ lang.menuId.contenu.ingredients.title}}</p>
                <p>{{ dish.ingredients }}</p>
                {% for portion in dish.portions %}
                    <div class="portion">
                        <h3>{{ portion.name}}</h3>
                        <p>$ {{ portion.price }}</p>
                        <form method="POST" action="{{ path('updateCart') }}" class="js_cart">
                            <input type="hidden" name="dish_item" value="{{ portion.id }}">
                            <button type="submit" class="cart"><span class="icon-shopping-cart"></span></button>
                        </form>
                        <form method="POST" action="{{ path('order') }}">
                            <input type="hidden" name="dish_item" value="{{ portion.id }}">
                            <button type="submit" class="btn-4">{{lang.menuId.button.title}}</button>
                        </form>
                    </div>
                {% endfor %}               
            </div>
        </div>
    </div>
    <div class="bannerButtons">
        <div class="content">
            <h2>{{lang.menuId.banner.title}}</h2>
            <a class="btn-1" href="{{ path('homepage', { '_fragment' : lang.homepage.sectionTop.menu3.path } ) }}"> 
                {{ lang.menuId.banner.button1.title }} </a>
            <a class="btn-1" href="{{ path('menu') }}"> 
                {{ lang.menuId.banner.button2.title }} </a>
        </div>
    </div>
    <div class='newsletter'>
        <div class='content'>
            <div class="fl_left left">
                <h3>{{ lang.homepage.setionNewsletter.contenuLeft.title}}</h3>
                <p>{{ lang.homepage.setionNewsletter.contenuLeft.text }}</p>
                <div class="emailNewsletter">
                    <input class="email" type="text" id="newsletter" placeholder="{{lang.homepage.setionNewsletter.contenuLeft.placeholder}}">
                    <a class="btn-3" href="" id="btn_newsletter">
                        {{lang.homepage.setionNewsletter.contenuLeft.pathTitle}}</a>
                </div>
            </div>
            <div class="fl_right right">
                <h3>{{ lang.homepage.setionNewsletter.contenuRight.title}}</h3>
                <div class="social-networks">
                    <ul>
                        <li class=""><a href="{{ lang.homepage.sectionTop.socialIcons.link1.path}}" target="_blank">
                                <span class="icon icon-facebook-with-circle"/></a></li>
                        <li class=""> <a href="{{ lang.homepage.sectionTop.socialIcons.link3.path}}" target="_blank">
                                <span class="icon icon-instagram-with-circle"/></a></li>
                        <li class=""><a href="{{ lang.homepage.sectionTop.socialIcons.link6.path}}" target="_blank">
                                <span class="icon icon-pinterest-with-circle"/></a></li>
                    </ul> 
                </div>
            </div>    
        </div>
    </div>
    <div class="modal fade modal_newsletter" id="modal_newsletter" tabindex="-1" role="dialog" aria-labelledby="modal_newsletterLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">          
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="icon icon-circle-with-cross"/></button>
                    {% image 'Resources/public/images/logo.png' %}<img src="{{ asset_url }}" alt="Cuisine Vive"/>{% endimage %}

                    <h4 class="modal-title" id="myModalLabel">{{ lang.modalNewsletter.title }}</h4>
                </div>
                <div class="modal-body">
                    <div class='hidden js_invalid_mail emptyText'>{{ lang.modalNewsletter.invalidMail }}</div>
                    <div class='hidden js_add_newsletter_ok emptyText'>{{ lang.modalNewsletter.newsletterOk }}</div>
                    <div class='hidden js_already_newsletter emptyText'>{{ lang.modalNewsletter.newsletterAlready }}</div>
                    <div class='hidden js_problem_newslleter emptyText'>{{ lang.modalNewsletter.newsletterProblem }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
