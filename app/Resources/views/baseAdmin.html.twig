<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Cuisine Vive{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets 'Resources/public/css/*' filter='cssrewrite' output='css/compiled/app.css' %}
            <link href="{{ asset_url }}" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body style="padding-top: 0;">
        <div class="sidebar">
            <div class="brand">
                <a href="/">
                    {% image 'Resources/public/images/logo.png' %}
                    <img src="{{ asset_url }}" alt="Cuisine Vive" />
                    {% endimage %}
                </a>
            </div>
            <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 85%;">
                <div class="sidebar-scroll" style="overflow: hidden; width: auto; height: 85%;">
                    <nav>
                        <ul class="nav">
                            <li>
                                <a href="{{ path('administracion_dish_index') }}" class="active"><i class="lnr lnr-home"></i> 
                                    <span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>
                                    <span class="glyphicon-class">Assiettes</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('category_index') }}" class="active"><i class="lnr lnr-home"></i> 
                                    <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                                    <span class="glyphicon-class">Catégories</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('portion_index') }}" class="active"><i class="lnr lnr-home"></i> 
                                    <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                                    <span class="glyphicon-class">Portions</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('icon_index') }}" class="active"><i class="lnr lnr-home"></i> 
                                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                                    <span class="glyphicon-class">Icônes</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('orden_index') }}" class="active"><i class="lnr lnr-home"></i> 
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                                    <span class="glyphicon-class">Commandes</span>
                                </a>
                            </li>
                            <li>
                                <a href="/logout" class="active"><i class="lnr lnr-home"></i>
                                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                                    <span class="glyphicon-class">Sortir</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="slimScrollBar" style="background: rgb(0, 0, 0); width: 7px; position: absolute; top: 0px; border-radius: 7px; z-index: 99; right: 1px; height: 328.345px; display: none; opacity: 0.4;"></div>
                <div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(51, 51, 51); opacity: 0.2; z-index: 90; right: 1px;"></div>
            </div>
        </div>
                                    
        {#<nav class="navbar navbar-default">
            <div class="">
                <div class="navbar-btn">
                    <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>
                </div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-menu">
                        <span class="sr-only">Toggle Navigation</span>
                        <i class="fa fa-bars icon-nav"></i>
                    </button>
                </div>
                <div id="navbar-menu" class="navbar-collapse collapse">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="assets/img/user.png" class="img-circle" alt="Avatar"> <span>Samuel</span> <i class="icon-submenu lnr lnr-chevron-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="lnr lnr-user"></i> <span>My Profile</span></a></li>
                            <li><a href="#"><i class="lnr lnr-envelope"></i> <span>Message</span></a></li>
                            <li><a href="#"><i class="lnr lnr-cog"></i> <span>Settings</span></a></li>
                            <li><a href="#"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>
                        </ul>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>#}
    {% block body %}{% endblock %}

    {% block javascripts %}
        {% javascripts 'Resources/public/js/*' output='js/compiled/app.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

</body>

</html>

