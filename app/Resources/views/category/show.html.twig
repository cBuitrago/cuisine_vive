{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Category</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ category.photo }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('category_index') }}">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Back to the list</a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('category_edit', { 'id': category.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit
                </a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-default">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
