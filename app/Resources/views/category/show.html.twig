{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Catégorie - {{ category.name }}</h1>
        {% set francais = category.getLanguageOfCategoryAll('fr') %}
        {% set anglais = category.getLanguageOfCategoryAll('en') %}
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Nom (français)</th>
                    <td>{{ francais.name }}</td>
                </tr>
                <tr>
                    <th>Description (français)</th>
                    <td>{{ francais.description }}</td>
                </tr>
                <tr>
                    <th>Nom (anglais)</th>
                    <td>{{ anglais.name }}</td>
                </tr>
                <tr>
                    <th>Description (anglais)</th>
                    <td>{{ anglais.description }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td><img style="width: 100px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ category.photo ) }}" alt="{{ category.name }}" /></td>
                </tr>
                <tr>
                    <th>Nom de la photo</th>
                    <td>{{ category.photo }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('category_index') }}">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Catégorie</a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('category_edit', { 'id': category.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Mofifier
                </a>
            </li>
            {#<li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-default">
                {{ form_end(delete_form) }}
            </li>#}
        </ul>
    </div>
{% endblock %}
