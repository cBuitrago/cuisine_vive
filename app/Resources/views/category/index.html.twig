{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
    <h1>Categories list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>{{ category.photo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_show', { 'id': category.id }) }}">
                                <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Create a new category
            </a>
        </li>
    </ul>
    </div>
{% endblock %}
