{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <ul>
            <li>
                <a href="{{ path('category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Créér catégorie
                </a>
            </li>
        </ul>
        <h1>Liste de Catégories</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Catégorie</th>
                    <th>Info / Éditer</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td><img style="width: 40px; height: auto;" class="" src="{{ asset('Resources/public/images/' ~ category.photo ) }}" alt="{{ category.name }}" /></td>
                        <td>{{ category.name }}</td>
                        <td>
                            <ul style="padding-left: 0">
                                <li style="display: inline-block;">
                                    <a href="{{ path('category_show', { 'id': category.id }) }}">
                                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li style="display: inline-block;">
                                    <a href="{{ path('category_edit', { 'id': category.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
