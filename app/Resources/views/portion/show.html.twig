{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <h1>Portion - {{ portion.name }}</h1>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Nom portion</th>
                    <td>{{ portion.name }}</td>
                </tr>
                <tr>
                    <th>Nom (français)</th>
                    <td>{{ portion.getLanguageOfPortion('fr') }}</td>
                </tr>
                <tr>
                    <th>Nom (anglais)</th>
                    <td>{{ portion.getLanguageOfPortion('en') }}</td>
                </tr>
            </tbody>
        </table>
        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('portion_index') }}">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Retourner à la liste
                </a>
            </li>
            <li>
                <a class="btn btn-default" href="{{ path('portion_edit', { 'id': portion.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modifier</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Effacer" class="btn btn-default" />
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
