{% extends 'base.html.twig' %}

{% block body %}
    <h1>Portions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for portion in portions %}
            <tr>
                <td><a href="{{ path('portion_show', { 'id': portion.id }) }}">{{ portion.id }}</a></td>
                <td>{{ portion.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('portion_show', { 'id': portion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('portion_edit', { 'id': portion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('portion_new') }}">Create a new portion</a>
        </li>
    </ul>
{% endblock %}
