{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="contenu">
        <ul>
            <li>
                <a href="{{ path('portion_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>Créér portion
                </a>
            </li>
        </ul>
        <h1>Liste de portions</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Info/Modifier</th>
                </tr>
            </thead>
            <tbody>
                {% for portion in portions %}
                    <tr>
                        <td>{{ portion.name }}</td>
                        <td>
                            <ul style="padding-left: 0">
                                <li style="display: inline-block;">
                                    <a href="{{ path('portion_show', { 'id': portion.id }) }}">
                                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li style="display: inline-block;">
                                    <a href="{{ path('portion_edit', { 'id': portion.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>        
    </div>
{% endblock %}
